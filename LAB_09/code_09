//Assume that you have a seven-slot closed hash table (the slots are numbered o through 6) Write program to find hash table that would result if you used the hash function h(k) k mod 7.

#include <stdio.h>
#define SIZE 7

int main() {
    int hash[SIZE];
    int keys[SIZE], i, n, key, index;

    for (i = 0; i < SIZE; i++)
        hash[i] = -1;

    printf("Enter number of keys: ");
    scanf("%d", &n);

    printf("Enter %d keys: ", n);
    for (i = 0; i < n; i++) {
        scanf("%d", &key);
        index = key % SIZE;

        while (hash[index] != -1)
            index = (index + 1) % SIZE;

        hash[index] = key;
    }

    printf("Hash Table:\n");
    for (i = 0; i < SIZE; i++)
        printf("Slot %d â†’ %d\n", i, hash[i]);
    return 0;
}
